# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

[*.{ini,py,py.tpl,rst}]
indent_size = 4

[*.{sh,bat}]
indent_style = tab
indent_size = 4

[Makefile]
indent_style = tab
indent_size = 4
